<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
        <title><%= title %></title>
        <meta name="description" content="" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
            integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous" />
            <link rel="icon" href="/../../web-files/assets/images/favicon.ico" type="image/x-icon">
            <link rel="stylesheet" href="/web-stylesheets/login.style.css">
        <link rel="stylesheet" type="text/css" href="/../../web-files/assets/icon/feather/css/feather.css">
    </head>
    <body>
        <!--[if lt IE 7]>
            <p class="browsehappy">You are using an <strong>outdated</strong> browser. Please <a href="#">upgrade your browser</a> to improve your experience.</p>
        <![endif]-->
        <form id="jsFormChooseStaff" action="/my/login" method="POST">
            <% if(client) { %>
            <div class="card fix-size">
                <p class="text-center"><img width="60px" height="60px" src="<%= client.logo_uri ? client.logo_uri : '/web-images/logo.png' %>" alt=""></p>
                <p class="text-center title-txt mt-3 mb-3">
                    <%= client.name %> is requesting access to your CashD data.
                </p>
                <p class="txt-please">Please select which organisation <%= client.name %> can access:</p>
                <select id="organisation-select" class="form-control form-control-custom" name="staff_id">
                    <% staffs.forEach(function(staff) { %>
                        <option value="<%= staff._id %>">[<%= staff.system_infor.code %>] <%= staff.company_infor.company_name %> </option>
                    <% }); %>
                </select>
                <p class="text-center">
                    <button name="cancel" type="submit" class="btn btn-secondary mr-2">Cancel</button>
                    <button name='authorize' type="submit" class="btn btn-primary ml-2">Authorize</button>
                </p>
            </div>
            <% } %>
        </form>
        <!-- JS, Popper.js, and jQuery -->
        <% include ../layouts/script %>
        <script>
            $(document).ready(function () {
                $('button[name="cancel"]').click(function(event) {
                    event.preventDefault();
                    $('#jsFormChooseStaff').append('<input type="text" hidden value="1" name="is_cancel">');
                    submitForm();
                });
                $('button[name="authorize"]').click(function(event) {
                    event.preventDefault();
                    $('#jsFormChooseStaff').append('<input type="text" hidden value="0" name="is_cancel">');
                    submitForm();
                });
                function submitForm(params) {
                    $('#jsFormChooseStaff').submit();
                }
            });
        </script>
    </body>
</html>