<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <!--[if lt IE 10]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
      <![endif]-->
  <!-- Meta -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <% include ../layouts/stylesheet %>
</head>

<body>
  <% include ../layouts/preloader %>
  <div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <div class="pcoded-container navbar-wrapper">
      <% include ../layouts/navbar %>
      <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
          <% include ../layouts/leftbar %>
          <div class="pcoded-content">
            <div class="pcoded-inner-content">
              <!-- Main-body start -->
              <div class="main-body">
                <div class="page-wrapper">

                  <!-- Page body start -->
                  <div class="page-body">
                    <form action="/admin/edit-pricing/<%= pricing._id %>/?_csrf=<%=csrfToken%>" method="POST">
                      <div class="row">
                        <div class="col-sm-12">
                          <div class="card">
                            <div class="card-header">
                              <h4>Edit Pricing</h4>
                              <hr>
                            </div>
                            <div class="card-block">
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label"><b>Name</b></label>
                                <div class="col-sm-10">
                                  <input type="text" maxlength="50" class="form-control" name="name" value="<%= pricing.name %>" maxlength="50">
                                  <span class="messages popover-valid"></span>
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label"><b>Price</b></label>
                                <div class="col-sm-10">
                                  <input type="number" min="0" max="9999999999" class="form-control" name="price" value="<%= pricing.price %>" maxlength="25">
                                  <span class="messages popover-valid"></span>
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label"><b>Content</b></label>
                                <div class="col-sm-10">
                                  <div class="form-group row">
                                      <div class="col-sm-6">
                                          <label>Disk Space</label>
                                          <input type="text" class="d-none" name="oldDisk" id="oldDisk" value="<%= pricing.diskSpace %>" maxlength="25">
                                          <div class="container">
                                            <div class="row">
                                              <input onchange="changeVal()" type="number" min="0" max="9999999999" class="form-control col-sm-9" name="disk" id="disk" placeholder="Enter Disk Space" required>
                                              <select onchange="changeVal()" name="unit" id="unit" class="form-control col-sm-3" required>
                                                <option value="MB">Megabyte (MB)</option>
                                                <option value="GB">Gigabyte (GB)</option>
                                                <option value="TB">Terabyte (TB)</option>
                                              </select>
                                              <input type="text" class="d-none" name="diskSpace" id="diskSpace" value="<%= pricing.diskSpace %>">
                                            </div>
                                          </div>
                                      </div>
                                      <div class="col-sm-6">
                                          <label>Subdomains</label>
                                          <input type="number" min="0" max="9999999999" class="form-control" name="subdomains" value="<%= pricing.subdomains %>" maxlength="25">
                                      </div>
                                  </div>
                                  <div class="form-group row">
                                      <div class="col-sm-6">
                                          <label>Email Accounts</label>
                                          <input type="number" min="0" max="9999999999" class="form-control" name="emailAccounts"  value="<%= pricing.emailAccounts %>">
                                      </div>
                                      <div class="col-sm-6">
                                          <label>Webmail Support</label>
                                          <select name="webmailSupport" class="form-control">
                                            <option value="">Yes/No</option>
                                            <option value="true" <%= pricing.webmailSupport === true ? 'selected' : '' %>>Yes</option>
                                            <option value="false" <%= pricing.webmailSupport === false ? 'selected' : '' %>>No</option>
                                          </select>
                                      </div>
                                  </div>
                                  <span class="messages popover-valid"></span>
                                </div>
                              </div>
                              <div class="form-group row">
                                  <label class="col-sm-2 col-form-label"><b>Offers</b></label>
                                  <div class="col-sm-10">
                                    <input type="number" min="0" max="9999999999" class="form-control" name="offers" value="<%= pricing.offers %>">
                                    <span class="messages popover-valid"></span>
                                  </div>
                                </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label"><b>Status</b></label>
                                <div class="col-sm-10">
                                  <select name="status" class="form-control">
                                    <option value="">Select One Value Only</option>
                                    <option value="true" <%= pricing.status === true ? 'selected' : '' %>>Active</option>
                                    <option value="false" <%= pricing.status === false ? 'selected' : '' %>>Disable</option>
                                </select>
                                </div>
                              </div>
                              <div class="row">
                                <label class="col-sm-2"></label>
                                <div class="col-sm-10">
                                  <button type="submit" class="btn btn-primary m-b-0">Submit</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                  <!-- Page body end -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ../layouts/script %>
  <!-- i18next.min.js -->
  <script type="text/javascript" src="../../web-files/bower_components/i18next/js/i18next.min.js"></script>
  <script type="text/javascript" src="../../web-files/bower_components/i18next-xhr-backend/js/i18nextXHRBackend.min.js">
  </script>
  <script type="text/javascript"
    src="../../web-files/bower_components/i18next-browser-languagedetector/js/i18nextBrowserLanguageDetector.min.js">
  </script>
  <script type="text/javascript" src="../../web-files/bower_components/jquery-i18next/js/jquery-i18next.min.js"></script>

</body>

<script type="text/javascript">
  var oldDisk = $('#oldDisk').val();
  var splitted = oldDisk.split(" ");
  $('#disk').val(splitted[0]);
  $('#unit').val(splitted[1]);
</script>
<script>
  function changeVal() {
    $('#diskSpace').val($('#disk').val() + ' ' + $('#unit').val());
  }
</script>

</html>
