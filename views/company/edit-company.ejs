<!DOCTYPE html>
<html lang="en">

<head>
  <title><%= title %></title>
  <!--[if lt IE 10]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
      <![endif]-->
  <!-- Meta -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <% include ../layouts/stylesheet %>
</head>

<body>
  <% include ../layouts/preloader %>
  <div id="pcoded" class="pcoded">
    <div class="pcoded-overlay-box"></div>
    <div class="pcoded-container navbar-wrapper">
      <% include ../layouts/navbar %>
      <div class="pcoded-main-container">
        <div class="pcoded-wrapper">
          <% include ../layouts/leftbar %>
          <div class="pcoded-content">
            <div class="pcoded-inner-content">
              <!-- Main-body start -->
              <div class="main-body">
                  <!-- Page body start -->
                  <div class="page-body">
                    <form action="/admin/edit-company/<%= company._id %>" method="POST" >
                      <div class="row">
                      <div class="col-sm-4">
                          <div class="card">
                              <div class="card-header">
                                <h4>Download Image</h4>
                                  <hr>
                              </div>
                            <div class="card-block">
                              <img src="/../../web-images/default.png" id="image-upload" alt="Default Download"
                                    class="img-fluid">
                            <div class="form-group mt-3">
                                <input type="file" class="form-control" id="upload-path" required name="imagePath">
                            </div>
                              </div>
                          </div>
                        </div>
                        <div class="col-sm-8">
                          <div class="card">
                            <div class="card-header">
                              <h4>Edit <%= company.company_name %></h4>
                              <hr>
                            </div>
                            <div class="card-block">
                              <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Name</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="company_name" value="<%= company.company_name %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Address</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="address" value="<%= company.address %>" maxlength="80">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Suburb</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="suburb" value="<%= company.suburb %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">City</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="city" value="<%= company.city %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">State</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="state" value="<%= company.state %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Email</label>
                                <div class="col-sm-10">
                                  <input type="email" class="form-control" name="email_company" value="<%= company.email_company %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Phone</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="phone_company" value="<%= company.phone_company %>" maxlength="11">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Postcode</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="postcode" value="<%= company.postcode %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">ABN</label>
                                <div class="col-sm-10">
                                  <input type="text" class="form-control" name="abn" value="<%= company.abn %>" maxlength="50">
                                </div>
                              </div>
                              <div class="form-group row">
                                <label class="col-sm-2 col-form-label">Status</label>
                                <div class="col-sm-10">
                                  <select name="is_active" class="form-control">
                                    <option value="0" <%= company.is_active === 0 ? 'selected' : '' %> >Active</option>
                                    <option value="1" <%= company.is_active === 1 ? 'selected' : '' %> >Disable</option>
                                  </select>
                                </div>
                              </div>
                              <div class="row">
                                <label class="col-sm-2"></label>
                                <div class="col-sm-10">
                                  <button type="submit" class="btn btn-primary m-b-0">Submit</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                  <!-- Page body end -->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% include ../layouts/script %>
  <!-- i18next.min.js -->
  <script type="text/javascript" src="../../web-files/bower_components/i18next/js/i18next.min.js"></script>
  <script type="text/javascript" src="../../web-files/bower_components/i18next-xhr-backend/js/i18nextXHRBackend.min.js">
  </script>
  <script type="text/javascript"
    src="../../web-files/bower_components/i18next-browser-languagedetector/js/i18nextBrowserLanguageDetector.min.js">
  </script>
  <script type="text/javascript" src="../../web-files/bower_components/jquery-i18next/js/jquery-i18next.min.js"></script>
</body>

</html>
